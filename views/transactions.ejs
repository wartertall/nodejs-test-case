<h1>Transactions page</h1>
<form action="/createtransaction" method="POST" id="createTransactionFrm">
	<h2>Create Stripe Payments</h2>
     <div class="form-group required">
        <label for="amount">Amount:</label>
        <input class="form-control" type="text" name="amount" id="amount" placeholder="Amount">
    </div>
     <div class="form-group required">
        <label for="currency">Currency:</label>
        <input class="form-control" type="text" name="currency" id="currency" placeholder="Currency">
    </div>
    <% if(!user.stripeCustomerId){ %>
        <div id="card-info">
            <div class="form-group required">
                <label for="cardnumber">Card number:</label>
                <input class="form-control card-number" type="text" name="cardnumber" id="cardnumber" placeholder="Card number">
            </div>
            <div class="form-group required">
                <label for="cvc">CVC:</label>
                <input class="form-control card-cvc" type="number" name="cvc" id="cvc" placeholder="CVC">
            </div>
            <div class="form-group required">
                <label for="card-expiry-month">Expired Month:</label>
                <input class="form-control card-expiry-month" type="number" name="card-expiry-month" id="card-expiry-month" placeholder="Expired Month">
            </div>
            <div class="form-group required">
                <label for="card-expiry-year">Expired Year:</label>
                <input class="form-control card-expiry-year" type="number" name="card-expiry-year" id="card-expiry-year" placeholder="Expired Year">
            </div>
        </div>
    <% } %>
    <div class="alert alert-warning payment-errors hide"></div>
    <div class="alert alert-success payment-created hide">Payment is created.</div>
    <button type="submit" class="btn btn-default submittransaction">Submit</button>
</form>